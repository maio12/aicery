    <div class="buttons_inside_map"><%= @list.first.supermarkets_by_total_price.first.basket_total_price(@product_ids) %></div>
    <div class="buttons_inside_map"><%= @list.first.supermarkets_by_total_price.first.total_matches(@product_ids) %></div>
  </div>
</div>


