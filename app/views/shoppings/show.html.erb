<div class="navbar-aicery">
  <%= link_to url_for(:back) do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <p>My Cart</p>
  <%= link_to list_path(@cart_list) do %>
    <i class="fas fa-shopping-cart"></i>
      <% if @cart_list.items.count.positive? %>
        <p class="notification"><%= @cart_list.items.sum(:quantity)%></p>
      <% else %>
        <p class="notification-hidden"><%= @cart_list.items.sum(:quantity)%></p>
      <% end %>
  <% end %>
</div>

<div class="purchase-supermarket">
  <h3><%= @supermarket.name %></h3>
  <p><%= @supermarket.address %></p>
</div>

<% @list.items.each do |item| %>
  <% if @ids_items_supermarkets.include?(item.product_id) %>
    <% if item.complete? %>
      <div class="purchase-card">
        <h3><%= item.name %></h3>
        <%= link_to item_path(item), method: :patch do %>
          <i class="fa fa-lg fa-check"></i>
        <% end %>
      </div>
    <% else %>
      <div class="purchase-card">
        <h3><%= item.name %></h3>
        <%= link_to item_path(item), method: :patch do %>
          <i class="fa fa-lg fa-check"></i>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

