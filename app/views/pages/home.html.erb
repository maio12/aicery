<div class="navbar-aicery">
  <i class="fas fa-arrow-left hide"></i>
  <p class="courgette">aicery</p>
   <div>
   <%= link_to list_path(current_user.lists.last) do %>
    <i class="fas fa-shopping-cart"></i>
      <% if current_user.lists.last.items.count > 0 %>
        <p class="notification"><%= current_user.lists.last.items.sum(:quantity)%></p>
      <% else %>
        <p class="notification-hidden"><%= current_user.lists.last.items.sum(:quantity)%></p>
      <% end %>
  <% end %>
  </div>
</div>

<div class="container-home-page">
  <div class="bar" data-controller="autocomplete"
                   data-autocomplete-url="<%= search_path %>">
    <%= form_tag root_path, method: :get, class: "form-home-page" do %>

      <div id= "search-data" class="form-search search-data" data-products="<%= @products.to_json %>">
        <i class="fas fa-search"></i>
        <%= text_field_tag :query, nil,
                           autocomplete: :off,
                           class: "form-control",
                           placeholder: "What do you need to buy?",
                           data: {
                            action: "keyup->autocomplete#load",
                            target: "autocomplete.input"
                           } %>

      </div>
    <% end %>
    <br>
    <div data-target="autocomplete.results"></div>
  </div>
</div>

<div class="illustration">
  <%= image_tag("opz3.png") %>
</div>
